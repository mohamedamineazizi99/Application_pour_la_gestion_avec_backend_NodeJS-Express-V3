    <center><h1 class="mt-5">Page Inscription</h1></center>

    <!-- start form inscription -->
    <div class="container mt-5">
      <form action="/addCompte" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="type the name ">
        </div>
        <div class="form-group">
            <label for="lname">Last Name</label>
            <input type="text" class="form-control" id="lname" name="lname" placeholder="type the last name ">
        </div>
        <div class="form-group">
          <label for="role">Role</label>
          <select id="role" class="form-control" name="role">
            <option selected>Your Role</option>
            <option value="Admin">admin</option>
            <option value="user">user</option>
          </select>
        </div>
        <div class="form-group">
          <i class="fas fa-envelope prefix active"></i>
          <label for="email">Email address</label>
          <input type="text" class="form-control" id="email" name="email" placeholder="type the email">
        </div>
        <div class="form-group">
          <i class="fas fa-lock prefix active"></i>
          <label for="password">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="type the password">
        </div>
        <!-- Sign in button -->
        <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0 btn-lg" type="submit" style="box-shadow: 0 5px 11px 0 rgba(85, 182, 255, 0.28), 0 4px 15px 0 rgba(36, 133, 255, 0.15);">Créer un compte</button>
      </form>
      <center>
        <h2 style="color: red;"> <span><% if(locals.email ){%> Merci de changer Email :<%=email%> <%}%></span> </h2>
      </center>
    </div>
    <!-- end form inscription  -->

    <!-- start fouter -->
    <center>
      <!-- Footer -->
      <footer class="page-footer font-small cyan darken-3" style="background-color: #a5b1c2">
        <!-- Footer Elements -->
