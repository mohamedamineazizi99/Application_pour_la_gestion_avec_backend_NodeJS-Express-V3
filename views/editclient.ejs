		<!-- start action -->
		<div class="container mt-5">
			<form action="/editclient/<%= dataclient.ID %>" method="POST">
				<div class="form-group">
					<label for="fname">Ferst Name</label>
					<input 
						type="text" 
						class="form-control" 
						id="fname" 
						name="fname"
						value="<%= dataclient.fname %>"
					/>
				</div>
				<div class="form-group">
					<label for="lname">last Name</label>
					<input 
						type="text" 
						class="form-control" 
						id="lname" 
						name="lname"
						value="<%= dataclient.lname %>"
						placeholder="type the Last Name..."
					/>
				</div>
				<div class="form-group">
					<label for="cin">CIN</label>
					<input 
						type="text" 
						class="form-control" 
						id="cin" 
						name="cin"
						value="<%= dataclient.cin %>"
						placeholder="type the cin..."
					/>
				</div>
				<!-- <button type="submit" class="btn btn-info">Save</button> -->
