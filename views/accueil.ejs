<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link 
      rel="stylesheet" 
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" 
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" 
      crossorigin="anonymous"
    >
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css">
  </head>
  <body>
    <!-- start navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="#">Gestion de Cabinet Médical</a>
    
      <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/accueil">Section CLIENT <span class="sr-only">(current)</span></a>
          </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
            <a href="/" class="btn btn-outline-success my-2 my-sm-0" type="submit" style="color: white;box-shadow: 0 0 0.5em #55efc4;">déconnecter</a>
        </form>
      </div>
    </nav>
    <!-- end navbar -->

    <!-- start action -->
    <div class="container mt-5">
      <center><h1 class="text-center">Bienvenue Dans La Section CLIENT</h1></center>
      <div style="display: flex;">
        <img src="../picture/left.png" alt="">
        <a href="/addclient" class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0 btn-lg" type="submit" style="box-shadow: 0 5px 11px 0 rgba(85, 182, 255, 0.28), 0 4px 15px 0 rgba(36, 133, 255, 0.15);background-color: #f1c40f;"><i class="fas fa-user-plus mr-3"></i>Créer Nouveau Compt</a>
        <img src="../picture/right.png" alt="">
      </div>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Ferst Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">CIN</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody id="tablTbody">
          <% dataclient.forEach(d => { %>
            <tr>
              <th scope="row"><%= d.ID %></th>
              <td><%= d.fname %></td>
              <td><%= d.lname %></td>
              <td><%= d.cin %></td>
              <td>
                <div>
                  <a href="/editclient/<%= d.ID %>" style="color: white">
                    <button type="button" class="btn btn-success"><i class="fas fa-user-edit"></i>
                      Modifier
                    </button>
                  </a>
                  <a href="/deleteclient/<%= d.ID %>" style="color: white" onclick="return confirm('are u sure ?')">
                    <button type="button" class="btn btn-danger"><i class="fas fa-trash-alt"></i><i class="fas fa-book-user"></i>
                      Supprimer
                    </button>
                  </a>
                  <button  class="btn btn-info">
                    <a href="/visitemedicale/<%= d.cin %>/<%=d.ID%>" style='color: white; text-decoration: none;' onclick="return confirm('Your welcome <%=d.cin%>?')"> <i class="fas fa-address-card" style="font-size: larger;"></i> Gérer Les Visites Médicales</a>
                  </button>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>     
    </div>
    <!-- end action -->

    <!-- start fouter -->
    <div style="padding-top: 28vh; bottom: 0px;width: 100%;">
      <center>
        <!-- Footer -->
        <footer class="page-footer font-small cyan darken-3" style="background-color: #a5b1c2">
          <!-- Footer Elements -->
          <div class="container">
            <!-- Grid row-->
            <div class="row">
              <!-- Grid column -->
              <div class="col-md-12 py-5">
                <div class="mb-5 flex-center">
                    <!-- Facebook -->
                    <a class="fb-ic">
                    <i class="fab fa-facebook-f fa-lg white-text mr-md-5 mr-3 fa-2x"> </i>
                      </a>
                    <!-- Twitter -->
                    <a class="tw-ic">
                      <i class="fab fa-twitter fa-lg white-text mr-md-5 mr-3 fa-2x"> </i>
                    </a>
                    <!-- Google +-->
                    <a class="gplus-ic">
                      <i class="fab fa-google-plus-g fa-lg white-text mr-md-5 mr-3 fa-2x"> </i>
                    </a>
                    <!--Linkedin -->
                    <a class="li-ic">
                      <i class="fab fa-linkedin-in fa-lg white-text mr-md-5 mr-3 fa-2x"> </i>
                    </a>
                    <!--Instagram-->
                    <a class="ins-ic">
                      <i class="fab fa-instagram fa-lg white-text mr-md-5 mr-3 fa-2x"> </i>
                    </a>
                    <!--Pinterest-->
                </div>
              </div>
              <!-- Grid column -->
            </div>
            <!-- Grid row-->
          </div>
          <!-- Footer Elements -->
          <!-- Copyright -->
          <div class="footer-copyright text-center py-3">© 2018 Copyright:
          <a href="https://mdbootstrap.com/education/bootstrap/"> MDBootstrap.com</a>
          </div>
          <!-- Copyright -->
        </footer>
        <!-- Footer -->
      </center>
    </div>
    <!-- end fouter -->

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"></script>
    <!-- <link rel="stylesheet" type="text/css" href="../css/scriptaccueil.js" /> -->
    <!-- <script src="../css/scriptaccueil.js"></script> -->
  </body>
</html>