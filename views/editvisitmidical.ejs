    <script>
      $(document).ready(function(){
        $('#Mdicamentes').prop('disabled', true);
        $('#DateInscription').prop('disabled', true);
        $('#EffetsSecondaires').prop('disabled', true);
        $('#TensionArterielle').prop('disabled', true);
        $('#FrequenceCardiaque').prop('disabled', true);
        $('#TemperatureCorporelle').prop('disabled', true);
        $('#PoidsCorporel').prop('disabled', true);
        $('#DiagnosticMedecin').prop('disabled', true);
        $('#Mdicamentes').prop('disabled', true);
        $('#btn-visit').css( "cursor", "not-allowed" );
        $('#btn-visit').prop( 'disabled', true );
        $('#linkdelet').prop( 'disabled', true );
        $('#btndelete').prop( 'disabled', true );
        $('#linkdelet').css( "cursor", "not-allowed" );
        $('#btndelete').css( "cursor", "not-allowed" );
        var cont = 0;
        $('#customSwitches').click(function(){
          if(cont == 0){
              $('#Mdicamentes').prop('disabled', false);
              $('#DateInscription').prop('disabled', false);
              $('#EffetsSecondaires').prop('disabled', false);
              $('#TensionArterielle').prop('disabled', false);
              $('#FrequenceCardiaque').prop('disabled', false);
              $('#TemperatureCorporelle').prop('disabled', false);
              $('#PoidsCorporel').prop('disabled', false);
              $('#DiagnosticMedecin').prop('disabled', false);
              $('#Mdicamentes').prop('disabled', false);
              $('#btn-visit').prop( 'disabled', false );
              $('#btn-visit').css( "background-color", "#fdcb6e" );
              $('#btn-visit').css( "cursor", "pointer" );
              $('#linkdelet').prop( 'disabled', false );
              $('#btndelete').prop( 'disabled', false );
              $('#linkdelet').css( "cursor", "pointer" );
              $('#btndelete').css( "cursor", "pointer" );
              cont = 1;
          }
          else if(cont == 1){
              $('#Mdicamentes').prop('disabled', true);
              $('#DateInscription').prop('disabled', true);
              $('#EffetsSecondaires').prop('disabled', true);
              $('#TensionArterielle').prop('disabled', true);
              $('#FrequenceCardiaque').prop('disabled', true);
              $('#TemperatureCorporelle').prop('disabled', true);
              $('#PoidsCorporel').prop('disabled', true);
              $('#DiagnosticMedecin').prop('disabled', true);
              $('#Mdicamentes').prop('disabled', true);
              $('#btn-visit').prop( 'disabled', true );
              $('#btn-visit').css( "background-color", "#b2bec3" );
              $('#btn-visit').css( "cursor", "not-allowed" );
              $('#linkdelet').prop( 'disabled', true );
              $('#btndelete').prop( 'disabled', true );
              $('#linkdelet').css( "cursor", "not-allowed" );
              $('#btndelete').css( "cursor", "not-allowed" );
              cont = 0;
          }
        })
      });
    </script>
