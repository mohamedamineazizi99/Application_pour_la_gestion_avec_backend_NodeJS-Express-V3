    <!-- start action -->
    <section>
      <div class="container">
        <div class="tab-pane fade in show active" id="tabCheckoutBilling123" role="tabpanel">
          <!--Card content-->
          <form action="/editvisitmidical/<%=cin%>/<%=ID%>/<%= listVisit.ID %>" method="POST">
            <div class="row">
                <!--Grid column-->
                <div class="col-md-6" style="display: flex;">
                  <!--DATE VISITE-->
                  <h3 class="col-md-6 "><strong for="firstName" >DATE VISITE :</strong></h3>
                  <input type="text" id="DateInscription" name="DateInscription" class="form-control col-md-6 mb-4" value="<%= listVisit.DateInscription %>">
                </div>
                <div class="col-md-6 " style="display: flex;">
                </div>
            </div>
            <div class="row">
                <!--Grid column-->
                <div class="col-md-6 " style="display: flex;">
                  <!--ID-->
                  <h3 class="col-md-6 "><strong for="firstName" class="">ID CLIENT :</strong></h3>
                  <input type="text" id="ID" name="ID" class="form-control col-md-6" value="<%=ID%>" readonly>
                </div>
                <!--Grid column-->
                <!--Grid column-->
                <div class="col-md-6 " style="display: flex;">
                  <!--CIN-->
                  <h3 class="col-md-6 "><strong for="lastName" class="">CIN CLIENT :</strong></h3>
                  <input type="text" id="visitem" name="visitem" class="form-control col-md-6" value="<%=cin%>" readonly><br>
                </div>
                <!--Grid column-->
            </div>
            <hr>
            <!--1-Effets secondaires-->
            <strong>1-Effets secondaires</strong>
            <textarea type="text" id="EffetsSecondaires" name="EffetsSecondaires" placeholder="Effets secondaires" class="form-control mb-4" rows="4"><%= listVisit.EffetsSecondaires %></textarea>
            <!--Grid row-->
            <div class="row">
                <!--Grid column-->
                <div class="col-md-6 mb-4">
                  <!--2-Tension Artérielle-->
                  <strong>2-Tension Artérielle</strong>
                  <input type="text" id="TensionArterielle" name="TensionArterielle" class="form-control" placeholder="Tension artérielle" value="<%= listVisit.TensionArterielle %>">
                </div>
                <!--Grid column-->
                <!--Grid column-->
                <div class="col-md-6 mb-2">
                  <!--3-Fréquence Cardiaque-->
                  <strong>3-Fréquence Cardiaque</strong>
                  <input type="text" id="FrequenceCardiaque" name="FrequenceCardiaque" class="form-control" placeholder="Fréquence cardiaque" value="<%= listVisit.FrequenceCardiaque %>">
                </div>
                <!--Grid column-->
            </div>
            <!--Grid row-->
            <!--Grid row-->
            <div class="row">
                <!--Grid column-->
                <div class="col-md-6 mb-4">
                  <!--4-Température Corporelle-->
                  <strong>4-Température Corporelle</strong>
                  <input type="text" id="TemperatureCorporelle" name="TemperatureCorporelle" class="form-control" placeholder="Température corporelle" value="<%= listVisit.TemperatureCorporelle %>">
                </div>
                <!--Grid column-->
                <!--Grid column-->
                <div class="col-md-6 mb-2">
                  <!--5-Poids Corporel-->
                  <strong>5-Poids Corporel</strong>
                  <input type="text" id="PoidsCorporel" name="PoidsCorporel" class="form-control"  placeholder="Poids Corporel" value="<%= listVisit.PoidsCorporel %>">
                </div>
                <!--Grid column-->
            </div>
            <!--Grid row-->
            <!--6-Le diagnostic du médecin-->
            <strong>6-Le diagnostic du médecin</strong>
            <textarea type="text" id="DiagnosticMedecin" name="DiagnosticMedecin" class="form-control mb-4" placeholder="Le diagnostic du médecin" rows="4"><%= listVisit.DiagnosticMedecin %></textarea>
            <!--7-les médicament-->
            <strong>7-les médicament</strong>
            <textarea type="text" id="Mdicamentes" name="Mdicamentes" class="form-control mb-4" placeholder="les médicament" rows="4"><%= listVisit.Mdicamentes %></textarea>
            <hr>
            <div class="custom-control custom-switch">
              <input type="checkbox" class="custom-control-input" id="customSwitches">
              <label class="custom-control-label" for="customSwitches">activier la mis a jour</label>
            </div>
            <hr>
            <button id="btn-visit" class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0 btn-lg" onclick="this.style.backgroundColor='#e67e22'" style="box-shadow: 0 5px 11px 0 rgba(85, 182, 255, 0.28), 0 4px 15px 0 rgba(36, 133, 255, 0.15);background-color: #b2bec3;"><i class="fas fa-user-edit"></i> Enrejestrer La modification</button>
            <!-- Default switch -->
          </form>
          <a href="/deletevisitmidical/<%=cin%>/<%=ID%>/<%= listVisit.ID %>" style="color: white" onclick="return confirm('are u sure ?')" id="linkdelet">
            <button type="button" class="btn btn-danger btn-rounded btn-block my-4 waves-effect z-depth-0 btn-lg" id="btndelete"><i class="fas fa-trash-alt"></i><i class="fas fa-book-user"></i>
              Delete
            </button>
          </a>
        </div>
      </div>
    </section>
    <!-- end action -->

